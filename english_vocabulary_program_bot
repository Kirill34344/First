def user_input():
    user_input_words = (input("Enter the word: "))
    words = []
    words.append(user_input_words)
    return words


def repeat_func():
    repeat = input("вы хотите ввести еще одно слово?")
    if repeat == "y":
        user_input()
    elif repeat == "n":
        print("come back")
        return False
    else:
        print("Please enter 'y' to new game or 'n' to exit.")
    return True


def main():
    print("Welcome to the English vocabulary program!")

    user_input()

    repeat_func()

    repeat = True
    while repeat == True:
        repeat = repeat_func()

    print(words)

main()
