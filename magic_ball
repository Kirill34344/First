from random import choice

answers = [
    "Бесспорно", "Мне кажется - да", "Пока неясно, попробуй снова", "Даже не думай",
    "Предрешено", "Вероятнее всего", "Спроси позже", "Мой ответ - нет",
    "Никаких сомнений", "Хорошие перспективы", "Лучше не рассказывать", "По моим данным - нет",
    "Определённо да", "Знаки говорят - да", "Сейчас нельзя предсказать", "Перспективы не очень хорошие",
    "Можешь быть уверен в этом", "Да. Сконцентрируйся и спроси опять", "Весьма сомнительно"
]


def main():
    print("Hello World, I am a magic ball and I know the answer to any question you have.")

    user_name = input("What is your name? ")

    print(f"Hello, {user_name}!")

main()
    

def play_game():
    question = input("Ask your question: ")
    print(choice(answers))

play_game()


def  repeat_y():
    play_game()

def repeat_n():
    print("Come back if you have ane questions!")

def repeat_not_yn():
    print("Please enter 'y' to new game or 'n' to exit.")



while True:
    repeat = input("Would you like to ask another question? (y/n): ").lower()
    if repeat == "y":
        repeat_y()
    elif repeat == "n":
        repeat_n()
        break
    else:
        repeat_not_yn()


